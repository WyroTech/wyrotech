---
interface Props {
	text: string;
	href: string;
}
const { text, href } = Astro.props;
---

<a
  href={href}
  class="flex flex-col overflow-y-hidden h-6 w-min relative"
>
  <span class="h-6 transition-all cube text-gradiant whitespace-nowrap">
    {text}
  </span>
  <span class="h-6 transition-all cube whitespace-nowrap">
    {text}
  </span>
</a>