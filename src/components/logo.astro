---
import logoImg from "public/logo.webp";
import logoSmallImg from "public/logo_small.webp";

const { small = true } = Astro.props;
---
<div class="flex items-center">
    <div class="flex items-center gap-px">
        <img
                src={small ? logoSmallImg.src : logoImg.src}
                alt="logo"
                width={small ? 28 : 56}
                height={small ? 28 : 56}
                class="mr-1"
                loading="lazy"
        />
        <span class={(small ? "text-2xl!" : "text-6xl!") + " font-extrabold! text-white!"}>Wyro</span>
        <span class={(small ? "text-2xl!" : "text-6xl!") + " font-thin! text-white!"}>Tech</span>
    </div>
</div>